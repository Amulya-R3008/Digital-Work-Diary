<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Spinner
        android:id="@+id/spinnerWeek"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:entries="@array/weeks"/>

    <Spinner
        android:id="@+id/spinnerDay"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:entries="@array/days"/>

    <Spinner
        android:id="@+id/spinnerUnit"
        android:layout_width="120dp"
        android:layout_height="48dp"/>

    <Spinner
        android:id="@+id/spinnerMainTopic"
        android:layout_width="500dp"
        android:layout_height="48dp"/>

    <Button
        android:id="@+id/btnSubtopics"
        android:layout_width="500dp"
        android:layout_height="48dp"
        android:ellipsize="end"
        android:maxLines="2"/>

    <Spinner
        android:id="@+id/spinnerBloom"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:entries="@array/bloom_levels"/>

    <Spinner
        android:id="@+id/spinnerCO"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:entries="@array/course_outcomes"/>

    <Spinner
        android:id="@+id/spinnerActivity"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:entries="@array/activities"/>
</TableRow>
