<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="#F6FCFF"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="6dp">

    <TextView
        android:id="@+id/tv_day_date"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:textColor="#1C6DD0"
        android:gravity="center"
        android:padding="8dp"
        android:text="Day &amp; Date"
        android:clickable="true"
        android:focusable="true" />

    <EditText
        android:id="@+id/et_time"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:hint="Time"
        android:background="@drawable/rounded_edittext"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/et_class"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:hint="Class"
        android:background="@drawable/rounded_edittext"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/et_course"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:hint="Course"
        android:background="@drawable/rounded_edittext"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/et_portion"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:hint="Portion"
        android:background="@drawable/rounded_edittext"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/et_students"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:hint="No."
        android:inputType="number"
        android:background="@drawable/rounded_edittext"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/tv_remarks"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:textColor="#FF9F1C"
        android:gravity="center"
        android:padding="8dp"
        android:text="Remarks"
        android:clickable="true"
        android:focusable="true" />

    <Spinner
        android:id="@+id/spinner_remarks"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Delete row"/>
</LinearLayout>
